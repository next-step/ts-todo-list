{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "es6",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./@type"]
  }
}
